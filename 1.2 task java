import java.util.ArrayList;
import java.util.List;

public class Main {
    public static void main(String[] args) {
        List<String> li = new ArrayList<>();
        li.add("a");
        li.add("1");
        li.add("b");
        li.add("2");
        li.add("c");
        li.add("3");
        
        System.out.println("Исходный список: " + li);
        
        // li_1 = li[0::2] - элементы с четными индексами
        List<String> li_1 = new ArrayList<>();
        for (int i = 0; i < li.size(); i += 2) {
            li_1.add(li.get(i));
        }
        
        // li_2 = li[1::2] - элементы с нечетными индексами
        List<String> li_2 = new ArrayList<>();
        for (int i = 1; i < li.size(); i += 2) {
            li_2.add(li.get(i));
        }
        
        // del li - удаляем исходный список
        li.clear();
        
        System.out.println("li_1 (четные индексы): " + li_1);
        System.out.println("li_2 (нечетные индексы): " + li_2);
        System.out.println("li после удаления: " + li);
    }
}
