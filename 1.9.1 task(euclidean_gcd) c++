#include <iostream>
#include <cmath>  // Для использования abs
using namespace std;

// функция для НОД с Евклидом
int gcd(int a, int b) {
    // Заменяем числа на их модули
    a = abs(a);
    b = abs(b);
    
    // Условие выхода из рекурсии - базовый случай
    if (b == 0) {
        return a;
    }
    
    // НОД(a, b) = НОД(b, a % b), % - остаток от деления
    // Алгоритм Евклида: продолжаем, пока не достигнем базового случая
    return gcd(b, a % b);
}

int main() {
    // Тестирование функции
    
    cout << "НОД(48, 18) = " << gcd(48, 18) << endl;        // должно быт: 6
    // 48 ÷ 18 = 2 (остаток 12)
    // 18 ÷ 12 = 1 (остаток 6)  
    // 12 ÷ 6 = 2 (остаток 0) → НОД = 6
    
    cout << "НОД(17, 13) = " << gcd(17, 13) << endl;        // должно быт: 1
    // 17 и 13 - взаимно простые числа
    
    cout << "НОД(100, 25) = " << gcd(100, 25) << endl;      // должно быт: 25
    // 25 делит 100 без остатка
    
    cout << "НОД(-36, 24) = " << gcd(-36, 24) << endl;      // должно быт: 12
    // Проверка отрицательными числами
    
    cout << "НОД(0, 15) = " << gcd(0, 15) << endl;          // должно быт: 15
    // НОД(0, n) = n
    
    cout << "НОД(0, 0) = " << gcd(0, 0) << endl;            // должно быть: 0
    // Особый случай: НОД(0, 0) = 0
    
    return 0;
}
