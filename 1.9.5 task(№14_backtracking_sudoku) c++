#include <iostream>
#include <vector>

using namespace std;

class SudokuSolver {
private:
    vector<vector<int>> board;
    int size;

public:
    SudokuSolver(vector<vector<int>> puzzle) : board(puzzle), size(9) {}

    bool isValid(int row, int col, int num) {
        for (int i = 0; i < size; i++) {
            if (board[row][i] == num) {
                return false;
            }
        }

        for (int i = 0; i < size; i++) {
            if (board[i][col] == num) {
                return false;
            }
        }

        int startRow = row - row % 3;
        int startCol = col - col % 3;

        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                if (board[i + startRow][j + startCol] == num) {
                    return false;
                }
            }
        }

        return true;
    }

    bool findEmptyCell(int &row, int &col) {
        for (row = 0; row < size; row++) {
            for (col = 0; col < size; col++) {
                if (board[row][col] == 0) {
                    return true;
                }
            }
        }
        return false;
    }

    bool solve() {
        int row, col;

        if (!findEmptyCell(row, col)) {
            return true;
        }

        for (int num = 1; num <= 9; num++) {
            if (isValid(row, col, num)) {
                board[row][col] = num;

                if (solve()) {
                    return true;
                }

                board[row][col] = 0;
            }
        }

        return false;
    }

    void printBoard() {
        for (int i = 0; i < size; i++) {
            for (int j = 0; j < size; j++) {
                if (board[i][j] == 0) {
                    cout << ". ";
                } else {
                    cout << board[i][j] << " ";
                }

                if ((j + 1) % 3 == 0 && j != size - 1) {
                    cout << "| ";
                }
            }
            cout << endl;

            if ((i + 1) % 3 == 0 && i != size - 1) {
                cout << "------+-------+------" << endl;
            }
        }
    }

    vector<vector<int>> getSolution() {
        return board;
    }
};

int main() {
    vector<vector<int>> puzzle = {
        {5, 3, 0, 0, 7, 0, 0, 0, 0},
        {6, 0, 0, 1, 9, 5, 0, 0, 0},
        {0, 9, 8, 0, 0, 0, 0, 6, 0},
        {8, 0, 0, 0, 6, 0, 0, 0, 3},
        {4, 0, 0, 8, 0, 3, 0, 0, 1},
        {7, 0, 0, 0, 2, 0, 0, 0, 6},
        {0, 6, 0, 0, 0, 0, 2, 8, 0},
        {0, 0, 0, 4, 1, 9, 0, 0, 5},
        {0, 0, 0, 0, 8, 0, 0, 7, 9}
    };

    cout << "Исходное судоку:" << endl;
    SudokuSolver solver(puzzle);
    solver.printBoard();

    if (solver.solve()) {
        cout << "\nРешенное судоку:" << endl;
        solver.printBoard();
    } else {
        cout << "\nРешение не найдено!" << endl;
    }

    return 0;
}
