#include <iostream>

class MyStack {
private:
    int* arr;   // массив для хранения
    int top;    // индекс верхушки
    int capacity; // размер стека

public:
    MyStack(int size) {
        capacity = size;
        arr = new int[size];
        top = -1;
    }

    ~MyStack() { delete[] arr; }

    void push(int x) {
        if (top == capacity - 1) {
            std::cout << "Стек переполнен!\n";
            return;
        }
        arr[++top] = x;
    }

    int pop() {
        if (isEmpty()) {
            std::cout << "Стек пуст!\n";
            return -1;
        }
        return arr[top--];
    }

    int peek() {
        if (isEmpty()) {
            std::cout << "Стек пуст!\n";
            return -1;
        }
        return arr[top];
    }

    bool isEmpty() { return top == -1; }
};

// Пример использования
int main() {
    MyStack st(3);

    st.push(10);
    st.push(20);
    st.push(30);

    std::cout << "Верхний элемент: " << st.peek() << std::endl; // 30
    std::cout << "Удалён: " << st.pop() << std::endl;          // 30
    std::cout << "Верхний теперь: " << st.peek() << std::endl; // 20

    return 0;
}
