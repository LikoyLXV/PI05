#include <iostream>
#include <stack> // Включаем заголовочный файл для std::stack

int main() {
    std::stack<int> myStack; // Создаем стек целых чисел

    // Добавляем элементы в стек (операция push)
    myStack.push(10);
    myStack.push(20);
    myStack.push(30);
    std::cout << "Стек после добавления элементов: " << myStack.size() << std::endl; // Размер: 3

    // Получаем верхний элемент без удаления (операция top)
    std::cout << "Верхний элемент стека: " << myStack.top() << std::endl; // 30

    // Удаляем верхний элемент (операция pop)
    myStack.pop();
    std::cout << "Стек после первого удаления: " << myStack.size() << std::endl; // Размер: 2

    // Получаем новый верхний элемент
    std::cout << "Новый верхний элемент: " << myStack.top() << std::endl; // 20

    // Удаляем остальные элементы до опустошения стека
    while (!myStack.empty()) { // Проверяем, не пуст ли стек
        std::cout << "Извлекаем: " << myStack.top() << std::endl;
        myStack.pop(); // Удаляем
    }

    std::cout << "Стек после всех удалений: " << myStack.size() << std::endl; // Размер: 0

    return 0;
}
